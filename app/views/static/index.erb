<div class="header">
	<div class="container_logo">
		<div id="main_logo">
			<a href="/"><img src="img/main_logo.png" /></a>
		</div>
	</div>
</div>

<div class="tagline">
	<p><strong id="double">Linker Shrinker! Shrink Your Link!</strong>
	<br>Shorter, more efficient links.</p>
</div>

<form action="/urls" method ="post">
	Enter URL:
	<input type ="text" name="long_url">
	<input type ="submit" value="Submit">
</form>

<% unless @line1 == nil %>
	<div class="centered">
		<p> <%= @line1 %> </p>
		<p></p>
		<a href = <%= @url["short_link"] unless @url == nil %>> <%= @line2 %> </a>
		<p> <%= @line3 %> </p>
	</div>
<% end %>

<p> <br/> <br/> <p>

<table class>
	<thead> 
	<tr> <th colspan="3"><span class="mark">List archive</span></th></tr>
	<tr><th>Original Link</th> <th>Shrinked Link</th> <th>Clicked Link</th></tr> 
	</thead>
		<% @base_url = request.base_url %>
		<% Url.all.sort_by {|k, v| k[:link]}.reverse.sort_by {|k, v| k[:clickcount]}.reverse.first(20).each do |url| %>
	    	<tr class ="data">
				<td><p> <%=url.link%> </p></td>
				<td><a href = <%= url.short_link %>> <%= @base_url + "/" + url.short_link %> </a></td>
				<td><p> <%=url.clickcount%> </p></td>
	    	</tr>
	    <% end %>
</table>